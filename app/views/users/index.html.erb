<% provide(:title, "Users") %>
<h1>Users</h1>

<%= will_paginate @user %>

<ul class=users">
	<% @user.each do |user| %>
		<li>
			<%= gravatar_for user %>
			<%= link_to user.name, user %>
			<% if current_user.admin? && !current_user?(user) %>
				<%= button_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %>
			<% end %>
		</li>
		<br>
	<% end %>
</ul>
			
<%= will_paginate @user %>
